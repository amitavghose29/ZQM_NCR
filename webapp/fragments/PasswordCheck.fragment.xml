<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:l="sap.ui.layout">
	<Dialog title="Password Check" resizable="true" contentHeight="100px" contentWidth="100px">
        <l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Label text="Password:" labelFor="passwordInput"/>
			<Input
				id="passwordInput"
				type="Password"
				placeholder="Enter password.." />
		</l:content>
	</l:VerticalLayout>
        <beginButton>
            <Button text="Submit" type="Emphasized" press="onSubmitPwdCheck" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelPwdCheck" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>