<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" class="sapUiSizeCompact">
	<Dialog title="WorkGroup" resizable="true" contentHeight="200px" contentWidth="100px">
        <Table items="{DispoWorkGroupModel>/}" itemPress="onDispoWorkGrpItemSel">
            <columns>
                <Column minScreenWidth="Tablet" demandPopin="true"> 
                    <Label design="Bold" text="WorkGroup" />
                </Column>
				<Column minScreenWidth="Tablet" demandPopin="true">
                    <Text text="" />
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Active">
                    <cells>
                        <Text text="{DispoWorkGroupModel>WorkGroup}" />
						<Text text="{=${DispoWorkGroupModel>Default} === true ? 'Default' : ''}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <endButton>
            <Button text="Close" press="onCloseDispoWrkGrpMRB" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
