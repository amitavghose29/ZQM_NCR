<core:FragmentDefinition
	xmlns:core="sap.ui.core" 
    xmlns:fb="sap.ui.comp.filterbar" 
    xmlns="sap.m">
	<Dialog title="NC Detected At">
        <VBox class="sapUiSizeCompact">
			<fb:FilterBar showRestoreButton="false" search=".onFilterBarSearchNCDet">
                  <fb:filterGroupItems>
					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="WorkCenterCategory"
							label="Work Center Category"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input id="idFBNCDetAtWrkCntCateg" name="WorkCenterCategory" showValueHelp="true" valueHelpRequest=".onOpenWrkCntCateg"/>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="Plant"
							label="Plant"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input  id="idFBNCDetAtPlant" name="Plant" showValueHelp="true" valueHelpRequest=".onOpenPlant"/>
						</fb:control>
					</fb:FilterGroupItem>


					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="WorkCenter"
							label="Work Center"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input id="idFBNCDetAtWorkCenter" name="Work Center" showValueHelp="true" valueHelpRequest=".onOpenWorkCenter"/>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="Description"
							label="Description"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input id="idFBNCDetAtDesc" name="Description" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="LanguageKey"
							label="Language Key"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input id="idFBNCDetAtLanguage" name="LanguageKey" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>

                    <fb:FilterGroupItem
							groupName="Group 2"
							name="Department"
							label="Department"
							visibleInFilterBar="false"
						>
						<fb:control>
							<Input id="idFBNCDetAtDprtmnt" name="Department" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>

                    <fb:FilterGroupItem
							groupName="Group 2"
							name="Station"
							label="Station"
							visibleInFilterBar="false"
						>
						<fb:control>
							<Input id="idFBNCDetAtStation" name="Station" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>
				
				</fb:filterGroupItems>
			</fb:FilterBar>
            <Table id="idTableNCCreatedBy" items="{NCDetectedAtModel>/}" itemPress="handleNCItemSelection">
		        <columns>
			        <Column>
				        <Text text="Work Center Category" />
			        </Column>
			        <Column>
				        <Text text="Plant" />
			        </Column>
                    <Column>
				        <Text text="Work Center" />
			        </Column>
                    <Column>
				        <Text text="Short Description" />
			        </Column>
                    <Column>
				        <Text text="Language" />
			        </Column>
		        </columns>
		        <items>
			        <ColumnListItem vAlign="Middle" type="Active">
				        <cells>
					        <Text text="{NCDetectedAtModel>WorkCenterCategory}" /> 
                            <Text text="{NCDetectedAtModel>Plant}" />
                            <Text text="{NCDetectedAtModel>WorkCenter}"/>
                            <Text text="{NCDetectedAtModel>WorkCategoryName}"/>
                            <Text text="{NCDetectedAtModel>Language}"/>   
				        </cells>
			        </ColumnListItem>
		        </items>
	        </Table>
        </VBox>
        <endButton>
            <Button text="Close" press="_handleNCDetAtClose" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>