<core:FragmentDefinition
	xmlns:core="sap.ui.core" 
    xmlns:fb="sap.ui.comp.filterbar" 
    xmlns="sap.m">
	<Dialog title="NC Created By">
        <VBox class="sapUiSizeCompact">
			<fb:FilterBar showRestoreButton="false" search="onFilterBarSearchNCCrt">
                  <fb:filterGroupItems>
					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="WorkCenterCategory"
							label="Work Center Category"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input name="WorkCenterCategory" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="Plant"
							label="Plant"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input name="Plant" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>


					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="WorkCenter"
							label="Work Center"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input name="Work Center" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>

					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="Description"
							label="Description"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input name="Description" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem
							groupName="__$INTERNAL$"
							name="LanguageKey"
							label="Language Key"
							visibleInFilterBar="true"
						>
						<fb:control>
							<Input name="LanguageKey" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>

                    <fb:FilterGroupItem
							groupName="Group 2"
							name="Department"
							label="Department"
							visibleInFilterBar="false"
						>
						<fb:control>
							<Input name="Department" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>

                    <fb:FilterGroupItem
							groupName="Group 2"
							name="Station"
							label="Station"
							visibleInFilterBar="false"
						>
						<fb:control>
							<Input name="Station" showValueHelp="true"/>
						</fb:control>
					</fb:FilterGroupItem>
				
				</fb:filterGroupItems>
			</fb:FilterBar>
            <Table id="idTableNCCreatedBy" items="{ path: '/f4_genericSet', filters: [{path: 'Key', operator: 'EQ', value1: 'ERNAM'}]}">
		        <columns>
			        <Column>
				        <Text text="Work Center Category" />
			        </Column>
			        <Column>
				        <Text text="Plant" />
			        </Column>
                    <Column>
				        <Text text="Work Center" />
			        </Column>
                    <Column>
				        <Text text="Short Description" />
			        </Column>
                    <Column>
				        <Text text="Language" />
			        </Column>
		        </columns>
		        <items>
			        <ColumnListItem vAlign="Middle">
				        <cells>
					        <Text text="{Value}" /> 
                            <Text text="{Description}" />
                            <Text text=""/>
                            <Text text=""/>
                            <Text text=""/>   
				        </cells>
			        </ColumnListItem>
		        </items>
	        </Table>
        </VBox>
        <endButton>
            <Button text="Close" press="_handleNCCrtdAtClose" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>