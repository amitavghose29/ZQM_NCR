<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Dialog id="idMRBDlg" title="MRB Request Out" contentHeight="400px" contentWidth="500px">
        <f:SimpleForm
            editable="true"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="12"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="2"
            singleContainerFullSize="false"
            class="sapUiSizeCompact"
            labelMinWidth="1px"
        >
            <f:content>
                <Label text="MRB Request Number" />
                <Input value="" width="230px" />
                <Label text="Part Number" />
                <Input value="" />
                <Label text="Order Number" />
                <Input value="" width="100px" />
                <Label text="Quantity" />
                <Input value="" width="50%" />
                <Label text="A/C Number" />
                <Input width="50%" />
                <Label text="Project Stock? Yes or No" />
                <Switch state="true" customTextOn="Yes" customTextOff="No" />
                <Label text="Work Center" />
                <Input width="50%" />
                <Label text="Drop Point" />
                <Input width="50%" />
                <Label text="To the Attention of Name" />
                <Input width="50%" />
                <Label text="Additional Information" />
                <Input width="50%" />
            </f:content>
        </f:SimpleForm>
        <buttons>
            <Button text="Save" press="onSaveMRBRequestOut" />
            <Button text="Close" press="onCloseMRBRequestOut" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
